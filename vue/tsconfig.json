{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "alwaysStrict": true,
    "target": "es5",
    "isolatedModules": false,
    "lib": [
      "es2017",
      "dom",
      "es2015.promise"
    ],
    "sourceMap": true,
    "pretty": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}